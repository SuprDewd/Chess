<Window x:Class="ChessExplainer.Promotion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="Promotion" Height="300" Width="300" Closing="Window_Closing" Icon="/Chess;component/chess.ico">
    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Click="Clicked" Grid.Row="0">Queen</Button>
        <Button Click="Clicked" Grid.Row="1">Bishop</Button>
        <Button Click="Clicked" Grid.Row="2">Rook</Button>
        <Button Click="Clicked" Grid.Row="3">Knight</Button>
    </Grid>
</Window>
