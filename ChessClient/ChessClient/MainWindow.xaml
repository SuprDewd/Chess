<Window x:Class="ChessClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chess Lobby" Height="350" Width="238" Background="Gray" Closing="Window_Closing">
    <Grid>
        <WrapPanel Margin="0,10,0,0" Height="28" VerticalAlignment="Top" HorizontalAlignment="Center">
            <TextBox Name="txtIp" Height="25" VerticalAlignment="Top" Width="90" />
            <TextBox Name="txtPort" Height="25" VerticalAlignment="Top" Width="50" />
            <Button Click="Connect">Connect</Button>
        </WrapPanel>
        <TextBlock Margin="0,50,12,0" HorizontalAlignment="Center" FontSize="20" Foreground="White">Players</TextBlock>
        <ScrollViewer Margin="0,85,0,0">
            <ListBox Background="Transparent" Name="lstPlayers" HorizontalContentAlignment="Stretch">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Button Click="PlayerClicked" Height="25" Content="{Binding}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>
    </Grid>
</Window>
