<Window x:Class="ChessExplainer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="clr-namespace:ChessLib;assembly=ChessLib"
        Title="MainWindow" Height="350" Width="525" Background="Gray">
    <Grid Name="MainGrid" SizeChanged="Grid_SizeChanged">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="150" />
        </Grid.ColumnDefinitions>
        
        <c:ChessBoardControl Name="cbcBoard" Size="400" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0">
            <c:ChessBoardControl.Board>
                <c:ChessBoard />
            </c:ChessBoardControl.Board>
        </c:ChessBoardControl>
        
        <Border Grid.Column="1" />
    </Grid>
</Window>
